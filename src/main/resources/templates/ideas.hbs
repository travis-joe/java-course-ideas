{{#partial "content"}}
    <h1>Current ideas</h1>
    <ul>
        {{#each ideas}}
            <li>
                <form action="/ideas/{{slug}}/vote" method="post">
                    {{ title }}（{{voteCount}} votes）
                    <button>Vote</button>
                </form>
            </li>
        {{/each}}
    </ul>
    <form action="/ideas" method="post">
        <input type="title" placeholder="what's your idea?" name="title">
        <button>Suggest!</button>
    </form>
{{/partial}}

{{> base.hbs}}
